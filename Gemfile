source ENV.fetch('GEM_SOURCE','https://rubygems.org')

# Nanoc framework
gem 'nanoc',      '~>3.1'
gem 'adsf',       '~>1.0'

# Filesystem watcher
gem 'guard'
gem 'guard-nanoc'

# Cache buster
gem 'nanoc-cachebuster'

# Webserver
gem 'rack'
gem 'thin'

# Mignifying
gem 'rainpress'
gem 'uglifier'

# Javascripts
gem 'coffee-script'

# Stylesheets
gem 'sass'
gem 'compass'
gem 'modular-scale'

# Template
gem 'haml'

# Sprockets (library for compiling and serving web assets)
gem 'sprockets-sass'
gem 'sprockets-helpers'
gem 'nanoc-sprockets-filter'

group :development do
  gem 'guard-livereload', require: false
end